<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_helpdesk_form" model="ir.ui.view">
            <field name="name">res.helpdesk.ticket.inherit.form.custom</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">
				<xpath expr="//form/sheet/group" position="inside">
					<group  attrs="{'invisible': [('is_IT', '!=', True)]} ">
					<field name="is_IT" invisible="1"  />
					<field name="ticket_type_id"  />
					<field name="codeName"/>
					<field name="project"/>
					<field name="voice" widget="boolean_toggle"  />
					<field name="chatBot" widget="boolean_toggle"  />
					<field name="smartIVR" widget="boolean_toggle"  />
					<field name="iVRDeflection" widget="boolean_toggle"  />
					<field name="transactions"  />
					<field name="numberofLicenses"   />
					<field name="attachment"  />
					<field name="whatsApp" widget="boolean_toggle"  />
					<field name="facebook" widget="boolean_toggle" />
					<field name="webChat" widget="boolean_toggle"  />
					</group>
					
				</xpath>
				<xpath expr="//field[@name='ticket_type_id']" position="replace" />
					
				
                
            </field>
        </record>

  


    

     

     

  

       

     

    </data>
</odoo>